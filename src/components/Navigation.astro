---
type Route = {
  name: string;
  path: `/${string}`;
};

const routes = [
  {
    name: 'Home',
    path: '/',
  },
  {
    name: 'About',
    path: '/about',
  },
  {
    name: 'Blog',
    path: '/blog',
  },
  {
    name: 'Contact',
    path: '/contact',
  },
  {
    name: 'Tags',
    path: '/tags',
  },
] satisfies Route[];

const currentRoute = Astro.url.pathname;
---

<nav>
  {
    routes.map(({ name, path }) => (
      <a href={path} class:list={[{ selected: currentRoute === path }]}>
        {name}
      </a>
    ))
  }
</nav>
